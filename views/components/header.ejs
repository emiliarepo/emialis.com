<section class="hero is-small <%= color %> is-bold has-strong-bottom-shadow">

    <div class="hero-body">
        <div class="container">
            <div class="columns is-vcentered is-multiline is-mobile">
                <div class="column is-narrow">
                    <figure class="image is-192x192 object is-square">
                        <img class="is-rounded has-shadow" src="<%= icon %>">
                    </figure>
                </div>
                <div class="column is-narrow">
                    <h1 class="title is-1 is-white">
                        <%= title %>
                    </h1>
                    <h1 class="subtitle is-3 is-white">
                        <%= subtitle %>
                    </h1>
                </div>
            </div>
        </div>
    </div>

</section>

<a class="button is-info is-inverted home-button" href="/">
    <span class="icon">
        <i class="fas fa-home"></i>
    </span>
    <span>Home</span>
</a>