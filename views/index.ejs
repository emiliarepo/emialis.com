<!doctype html>

<html lang="en">

<head>

    <%- include('components/metatags', {
        title: "emialis",
        description: "she/they • epic gamer",
        image: "https://emialis.com/images/emialis/icon.png?dim=420"
    }) %>

</head>

<body>
    <%- include('components/header', {
        title: "emialis",
        subtitle: "she/they · epic gamer",
        icon: "/images/emialis/icon.png?dim=420",
        color: "is-primary"
    }) %>

    <% Object.keys(data).forEach(key => { %>
        <section class="section has-bottom-shadow" id=<%= key %>>
            <div class="container">
                <h1 class="title">
                    <%= data[key].title %>
                </h1>
                <h2 class="subtitle">
                    <%= data[key].subtitle %>
                </h2>
                <%- include('components/cardview', {
                    contentId: key + "-cards",
                    cards: data[key].cards
                }) %>
            </div>
        </section>
    <% }) %>

    <%- include('components/footer', {
        color: "is-primary"
    }) %>

    <script>
        function move(element, back) {
            element.parentElement.parentElement.parentElement.querySelector('.card-view').scrollBy({
                top: 0,
                left: back ? -320 : 320,
                behavior: 'smooth'
            })
        }
        const elements = ["projects-cards", "characters-cards", "contacts-cards"];
        elements.forEach(elementId => {
            const element = document.getElementById(elementId);
            console.log(element.scrollWidth + " " + element.parentElement.scrollWidth)
            if (element.scrollWidth <= element.parentElement.scrollWidth) {
                element.parentElement.querySelector(".scroll-button-wrapper").classList.add("is-hidden");
            }
        })
    </script>
</body>

</html>